// Prepend and append
.prepend, 
.append 
    white-space: nowrap

.prepend
    input, 
    select
        display: inline-block
        width: 90%

.append
    input, 
    select
        display: inline-block
        width: 90%

breakpoint(small)
    .prepend
        input, 
        select 
            width: 300px

    .append
        input, 
        select 
            width: 300px

.prepend .adjoined, 
.append .adjoined, 
.prepend .btn, 
.append .btn
    display: inline-block
    margin-bottom: 0
    position: relative

.prepend .btn
    a, 
    input, 
    button 
        padding: 0 12px

.append .btn
    a, 
    input, 
    button 
        padding: 0 12px

.prepend .adjoined, 
.append .adjoined, 
.prepend.transparent .adjoined, 
.append.transparent .adjoined
    background-color: #f3f3f3
    border: 1px solid #ddd
    color: #666
    height: 37px
    padding: 6px 11px

.prepend.transparent .adjoined
    background: transparent
    border-right: none

.append.transparent .adjoined
    background: transparent
    border-left: none

.prepend.transparent
    input, 
    select 
        border-left: none

.append.transparent
    input, 
    select 
        border-right: none

.prepend
    input:focus:invalid, 
    textarea:focus:invalid 
        border: 1px solid #e74c3c

.append
    input:focus:invalid, 
    textarea:focus:invalid 
        border: 1px solid #e74c3c

.prepend .adjoined 
    border-right: 0px

.append .adjoined 
    border-left: 0px

.prepend
    .adjoined, 
    .btn 
        margin-right: -4px

.append
    .adjoined, 
    .btn 
        margin-left: -4px

form.border-radius .prepend input, 
.border-radius.prepend input, 
form.border-radius .prepend select, 
.border-radius.prepend select 
    border-radius: 0px $border-radius $border-radius 0

form.border-radius .append input, 
.border-radius.append input, 
form.border-radius .append select, 
.border-radius.append select 
    border-radius: $border-radius 0 0 $border-radius

form.border-radius .append .adjoined, 
.border-radius.append .adjoined 
    border-radius: 0px $border-radius $border-radius 0

form.border-radius .prepend .adjoined, 
.border-radius.prepend .adjoined 
    border-radius: $border-radius 0 0 $border-radius