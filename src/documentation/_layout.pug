doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    title Concise Framework
    meta(name='description' content='Concise is a lightweight front-end framework that provides a number of great features without the bloat.')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    script(src='//use.typekit.net/glq4bcp.js')
    script try{Typekit.load({ async: true });}catch(e){}

    link(rel='stylesheet' href='/styles/main.css')
    link(rel='icon' href='/favicon.png')
  body
    div(container)
      div(grid)
        nav(column='4').main-nav
          img(src='/images/logo.svg' title="Concise CSS Logo").logo

          ol
            li: a(href='/') Home
            li
              a(href='/documentation/') Introduction
              ol
                li: a(href='/documentation/#installation') Installation
                li: a(href='/documentation/#building-source') Building the source
                li: a(href='/documentation/#configuration') Configuration
                li: a(href='/documentation/#add-ons') Using add-ons
                li: a(href='/documentation/#coding-conventions') Coding conventions

            li: a(href='/documentation/core') Core
            li
              a(href='/documentation/utils') Utils
              ol
                li: a(href='/documentation/utils#borders') Borders
                li: a(href='/documentation/utils#colors') Colors
                li: a(href='/documentation/utils#hide-show') Hide/Show
                li: a(href='/documentation/utils#display') Display
                li: a(href='/documentation/utils#margins') Margins
                li: a(href='/documentation/utils#paddings') Paddings
                li: a(href='/documentation/utils#position') Position
                li: a(href='/documentation/utils#type-scale') Type scale
                li: a(href='/documentation/utils#typography') Typograhy

            li: a(href='/documentation/ui') UI

        div(column='8')
          block content

    script(src='https://code.jquery.com/jquery-3.1.1.slim.js' integrity='sha256-5i/mQ300M779N2OVDrl16lbohwXNUdzL/R2aVUXyXWA=' crossorigin='anonymous')
    script(src='/scripts/main.js')

    script.
      window.ga=function(){ga.q.push(arguments)};ga.q=[];ga.l=+new Date;
      ga('create','UA-23449205-5','auto');ga('send','pageview')

    script(src='https://www.google-analytics.com/analytics.js' async defer)
